# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/podcast-app

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Text-to-Speech Provider Configuration
# Options: openai, elevenlabs, aws
TTS_PROVIDER=openai

# OpenAI Configuration (if using OpenAI TTS)
OPENAI_API_KEY=your-openai-api-key-here

# ElevenLabs Configuration (if using ElevenLabs)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# AWS Configuration (if using AWS Polly)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads

# Audio Generation Configuration
DEFAULT_VOICE=alloy
DEFAULT_AUDIO_QUALITY=medium

# Security Configuration
BCRYPT_ROUNDS=12

# CORS Configuration
FRONTEND_URL=http://localhost:3000
SESSION_TIMEOUT=30d
